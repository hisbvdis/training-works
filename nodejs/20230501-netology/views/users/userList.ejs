<%- include("../partials/layout-start.ejs", {pageTitle: pageTitle}) %>

<h1><%= pageTitle %></h1>

<a class="btn btn-sm btn-primary" href="/users/add">Add user</a>

<% if(users.length > 0) { %>
  <table class="table">
    <thead>
      <tr>
        <td scope="col">ID</td>
        <td scope="col">Name</td>
        <td scope="col">Actions</td>
      </tr>
    </thead>
    <tbody>
      <% users.map((user, i) => { %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <a href="/users/<%=user.id%>"><%= user.name %></a>
          </td>
          <td class="d-flex">
            <a class="btn btn-sm btn-primary" href="/users/edit/<%=user.id%>">Edit</a>
            <form action="/users/delete/<%=user.id%>" method="POST">
              <button class="btn btn-sm btn-danger" type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <h3>There are no users yet</h3>
<% } %>

<%- include("../partials/layout-end.ejs") %>
